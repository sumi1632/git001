      "cell_type": "code",
      "source": [
        "SEQLEN = 10  #몇글자씩 보고 공부할지\n",
        "STEP = 1\n",
        "\n",
        "input_chars = []\n",
        "label_chars = []\n",
        "for i in range(0, len(text) - SEQLEN, STEP):\n",
        "    input_chars.append(text[i:(i+SEQLEN)])\n",
        "    label_chars.append(text[i+SEQLEN])\n",
        "print(input_chars[0], \"->\", label_chars[0])\n",
        "print(input_chars[1], \"->\", label_chars[1])"
      ],
      "execution_count": 7,
      "outputs": [
