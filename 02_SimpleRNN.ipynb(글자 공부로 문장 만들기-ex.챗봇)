        "model = Sequential()\n",
        "model.add(SimpleRNN(HIDDEN_SIZE, return_sequences=False, input_shape=(SEQLEN, nb_char), unroll=True))\n",
        "model.add(Dense(nb_char))\n",
        "model.add(Activation('softmax'))\n",
        "model.summary()"
      ],
