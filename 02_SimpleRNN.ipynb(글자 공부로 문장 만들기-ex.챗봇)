        "INPUT_FILE = 'alice_in_wonderland.txt'\n",
        "fin = open(INPUT_FILE, 'rb')\n",
        "lines=[]\n",
        "for line in fin:\n",
        "    line = line.strip().lower()\n",
        "    line = line.decode('ascii', 'ignore')\n",
        "    if len(line) == 0:\n",
        "        continue\n",
        "    lines.append(line)\n",
